.searchbox {
  margin: 10px;
  border-radius: 10px;
  background-color: white;
}

.weui-cell {
  line-height: 1;
  padding: 5px 15px;
}

.weui-flex {
  line-height: 1;
  padding: 10px 0px;
  margin: 0 !important;
  border-radius: 0;
  background-color: transparent;
  border-top: 1px solid #f5f5f5;
}

.icon-search {
  font-size: 30px;
  margin-right: -10px;
}

.badge {
  padding: 1px 3px;
  border: 1px solid #999;
  color: #999;
  border-radius: 3px;
  font-size: 12px;
  margin-right: 5px;
}

.floatRight .iconfont {
  float: right;
  color: #999;
  font-size: 14px;
  margin-left: 5px;
}